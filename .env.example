# -------- Core / Tor --------
TOR_SOCKS_HOST=tor
TOR_SOCKS_PORT=9050

# -------- Crawler Limits / Politeness (forensisch = konservativ) --------
CRAWL_MAX_PAGES=20000000
CRAWL_MAX_PER_HOST=500000
CRAWL_MAX_DEPTH=200000
CRAWL_REQUEST_TIMEOUT=60
CRAWL_HOST_DELAY=30

# -------- Clearnet (über Tor) --------
# Für reines .onion-Forensic: false
CRAWL_CLEARNET=true
# Wenn du Clearnet selektiv erlauben willst:
# CRAWL_CLEARNET=true
# CLEARNET_ALLOWLIST=example.com,wikipedia.org
CLEARNET_ALLOWLIST=
CLEARNET_DENYLIST=

# -------- Persistence / Paths --------
DATA_DIR=/app/data
STATE_DIR=state

# -------- OpenSearch --------
OS_HOST=http://opensearch:9200
OS_INDEX=onion_pages
OS_USERNAME=
OS_PASSWORD=

# -------- Renderer (kein Screenshot; kann aus bleiben) --------
RENDER_ENABLE=false
RENDERER_URL=http://renderer:8080
RENDER_MODE=safe
RENDER_SKIP_ON_RISK=true
RISK_RENDER_THRESHOLD=60
RENDER_BLOCKLIST=

# -------- Forums --------
FORUMS_ENABLE=false
FORUMS_CONFIG=/app/forums.yaml

# -------- Forensik --------
FORENSIC_ENABLE=true
FORENSIC_WARC=true           # auf true setzen + `pip install warcio`, wenn du WARC willst
FORENSIC_DIR=state/evidence
CODE_VERSION=git-<commit-id>
CONTAINER_IMAGE=onion-crawler:<tag>

# -------- Neo4j (optional) --------
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=ChangeThis!Strong#2025
NEO4J_ENABLE_SCHEMA_INIT=true

# -------- User-Agent --------
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:131.0) Gecko/20100101 Firefox/131.0
